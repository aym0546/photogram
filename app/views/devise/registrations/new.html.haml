-# ユーザ登録画面
.container
  .card
    .bg-img
      = image_tag 'bg-img.jpg', id: 'bg-img'
    .form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :account, 'Account'
          %br/
          = f.text_field :account, autofocus: true, placeholder: "Account", autocomplete: "Account", class: 'text'
        .field
          = f.label :email, 'Email'
          %br/
          = f.email_field :email, autofocus: true, placeholder: "email@photogram.com", autocomplete: "Email", class: 'text'
        .field
          = f.label :password, 'Password'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, placeholder: "password", autocomplete: "Password", class: 'text'
        .field
          = f.label :password_confirmation, 'Password confirmation'
          %br/
          = f.password_field :password_confirmation, placeholder: "password", autocomplete: "Password", class: 'text'
        .actions
          = f.submit "CREATE ACCOUNT", class: 'btn-primary'
      = render "devise/shared/links"
