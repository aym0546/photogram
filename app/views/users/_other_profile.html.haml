%h1 他人の！
-# = render 'commons/profile', user: @user
.container
  .card
    .heading
      = user.account
    .user_info
      .avatar
        = image_tag user.avatar_img
      .achievement
        .block
          .count
            = user.posts.count
          .section
            Posts
        .block
          .count
            110
          .section
            Followers
        .block
          .count
            44
          .section
            Following
    .user_posts
      - user.posts.order(created_at: :desc).each do |post|
        = render 'commons/image_grid', post: post
